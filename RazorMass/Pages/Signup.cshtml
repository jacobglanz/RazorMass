@page
@model SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1 class="title">@ViewData["Title"]</h1>

<div class="field">
    <label class="label">Email</label>
    <div class="control">
        <input class="input" type="email" placeholder="you@email.com"/>
    </div>
</div>

<div class="field">
    <label class="label">Password</label>
    <div class="control">
        <input class="input" type="password" placeholder="1234 is fine"/>
    </div>
</div>
<label>@Model.Page()</label>
<div class="field">
    <div class="control">
        <button
            class="button is-link"
            hx-post=""
            
        >Sign Up
        </button>
    </div>
</div>
